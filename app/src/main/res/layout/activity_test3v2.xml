<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#87CEB1"
    android:orientation="vertical"
    tools:context=".test3v2">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#87CEB1">


        <TextView
            android:id="@+id/test3"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFE7BD"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:text="ELEPHANT"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="60sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#87CEB1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000"
            app:srcCompat="@drawable/png_line_2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1451dp"
        android:layout_weight="1"
        android:background="#87CEB1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:background="#000000">

            <Button
                android:id="@+id/hipp1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:text="Ответить"
                android:background="#CDB996" />

            <ImageView
                android:id="@+id/hipp"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:background="#87CEB1"
                app:srcCompat="@drawable/hipp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000"
            app:srcCompat="@drawable/png_line_2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="221dp">

            <Button
                android:id="@+id/crocodile1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:background="#CDB996"
                android:text="Ответить" />

            <ImageView
                android:id="@+id/crocodile"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:background="#87CEB1"
                app:srcCompat="@drawable/crocodile" />

        </LinearLayout>



        <ImageView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#000000"
            app:srcCompat="@drawable/png_line_2" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="221dp">
            <Button
                android:id="@+id/elephant1"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:background="#CDB996"
                android:text="Ответить" />
            <ImageView
                android:id="@+id/elephant"
                android:layout_width="match_parent"
                android:layout_height="221dp"
                android:background="#87CEB1"
                app:srcCompat="@drawable/elephant" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>